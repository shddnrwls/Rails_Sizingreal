
<br><br>


<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col">
      <div class="box">

      <article role="ohs"  class="text-center">
          <header>
            로그인
          </header>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <article role="login">
              <h3 class="text-center"><i class="fa fa-lock"></i>Log In</h3>
              <form class="signup" action="index.html" method="post">
                <div class="form-group">
                  <div class="field">
                  <h6 style= "text-align: left"><center>아이디</center></h6>
                  <%= f.email_field :email, autofocus: true %></div>
                </div>
                <div class="form-group">
                   <div class="field">
                <h6 style= "text-align: left"><center>비밀번호</center></h6><%= f.password_field :password, autocomplete: "off" %></div>
                </div>
                
                <% if devise_mapping.rememberable? -%><div class="field"><%= f.check_box :remember_me %><%= f.label :remember_me %></div><% end -%>
                
                <div class="form-group">
                  <div class="actions">
    <button type="submit" style="background-color:#23bab5;border:#23bab5"class="btn btn-warning btn1">로그인</button>
    <br><a href="/users/sign_up">회원가입할래요</a>
  </div>
                </div>
              </form>
        </article>
      </article>

      </div>
    </div>
    <div class="col">
    </div>
  </div>
</div><% end %>